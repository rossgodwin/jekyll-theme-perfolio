<h4 id="code-block-example">Code Block Example</h4>

<p><a href="https://highlightjs.org/usage" target="_blank">Usage</a> <span>|</span> <a href="https://highlightjs.org/static/demo" target="_blank">Themes</a></p>

<pre>
<code>
function $initHighlight(block, cls) {
  try {
    if (cls.search(/\bno\-highlight\b/) != -1)
      return process(block, true, 0x0F) +
             ` class="${cls}"`;
  } catch (e) {
    /* handle exception */
  }
  for (var i = 0 / 2; i &lt; classes.length; i++) {
    if (checkCondition(classes[i]) === undefined)
      console.log('undefined');
  }
}

export  $initHighlight;
</code>
</pre>

